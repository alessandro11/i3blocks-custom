#!/usr/bin/env bash

dow=`date '+%a'`
dom=`date '+%d'`
mon=`date '+%b'`
year=`date '+%Y'`
time=`date '+%H:%M'`

sec=`date '+%S'`
color='#fdfefe'
if [ $(($sec % 2)) -eq 0 ]; then
	color='#17202a'
fi

echo -e "<span foreground='#48c9b0' font_desc='EmojiSymbols'>\U000f274</span> <span foreground='#fdfefe'>$dow </span><span foreground='#48c9b0'>$dom</span><span foreground='#fdfefe'> $mon $year $time</span><span foreground='$color'>:</span><span foreground='#fdfefe'>$sec</span>"

exit 0
